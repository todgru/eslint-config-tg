{
  "name": "eslint-config-tg",
  "version": "0.0.5",
  "description": "tg eslint shared config",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/todgru/eslint-config-tg.git"
  },
  "keywords": [
    "eslint",
    "lint",
    "prettier"
  ],
  "files": [
    "index.js"
  ],
  "author": "todgru",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/todgru/eslint-config-tg/issues"
  },
  "homepage": "https://github.com/todgru/eslint-config-tg#readme",
  "peerDependencies": {
    "eslint": "5.10.0",
    "prettier": "1.15.3"
  },
  "dependencies": {
    "eslint": "5.10.0",
    "eslint-config-prettier": "3.3.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-unicorn": "6.0.1",
    "prettier": "1.15.3"
  },
  "eslintConfig":{
    "env": {
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "plugins": ["promise", "unicorn", "prettier"],
    "rules": {
      "dot-notation": ["error"],
      "eqeqeq": ["error", "smart"],
      "no-else-return": ["error"],
      "no-extra-bind": ["error"],
      "no-extra-label": ["error"],
      "no-implicit-coercion": ["error", { "allow": ["!!"] }],
      "strict": ["error", "global"],
      "linebreak-style": ["error", "unix"],
      "no-lonely-if": ["error"],
      "arrow-body-style": ["error", "as-needed"],
      "no-unused-vars": ["error", { "args": "none" }],
      "no-useless-computed-key": ["error"],
      "no-useless-rename": ["error"],
      "no-var": ["error"],
      "prefer-spread": ["error"],
      "prefer-template": ["error"],
      "prefer-const": ["warn", { "destructuring": "all" }],
      "no-empty-function": ["error"],
      "vars-on-top": ["error"],

      "unicorn/filename-case": ["warn", { "case": "kebabCase" }],
      "unicorn/throw-new-error": ["error"],
      "unicorn/no-array-instanceof": ["error"],
      "unicorn/no-new-buffer": ["error"],
      "unicorn/no-hex-escape": ["error"],
      "unicorn/prefer-starts-ends-with": ["warn"],

      "prettier/prettier": [ "error", { "trailingComma": "es5", "printWidth": 100 } ],

      "promise/catch-or-return": ["error"]
    }

  }
}
